<style>
  .navbar-nav .nav-link {
    transition: color 0.3s;
    color: #ffffff; /* เปลี่ยนสีข้อความเป็นสีขาว */
  }

  .navbar-nav .nav-item:hover {
    background-color: #007bff; /* เปลี่ยนสีพื้นหลังเมื่อ hover เป็นสีฟ้า */
  }

  .navbar-nav .nav-item:hover .nav-link {
    color: #ffffff !important; /* เปลี่ยนสีข้อความของลิงก์เมื่อ hover เป็นสีขาว */
  }

  .navbar-nav .nav-item:hover {
    border: 1px solid #ffffff; /* เพิ่มกรอบขอบสีขาวเมื่อ hover */
  }

  .navbar-nav .nav-link {
    padding: 10px 20px;
  }

  .navbar-brand .fa-square-h {
    font-size: 25px; /* ปรับขนาดไอคอนเพิ่มขึ้น */
  }

  .user-name {
    border: 1px solid #ffffff; /* เปลี่ยนสีกรอบเป็นสีขาว */
    border-radius: 50px;
  }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
  crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
  crossorigin="anonymous" referrerpolicy="no-referrer" />
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>


<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <strong class="navbar-brand" href="/">
      <i class="fa-solid fa-square-h text-primary"></i>otel Booking
    </strong>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mx-auto"> <!-- ใช้คลาส mx-auto เพื่อจัดวางเมนูตรงกลาง -->
        <li class="nav-item">
          <a class="nav-link" href="/">
            <i class="fas fa-home mr-1"></i> Home
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/allHotel">
            <i class="fas fa-hotel mr-1"></i> Hotels
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/showRooms">
            <i class="fas fa-bed mr-1"></i> Rooms
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">
            <i class="fas fa-info-circle mr-1"></i> About
          </a>
        </li>
      </ul>

      <ul class="navbar-nav ml-auto">
        <% if(user) { %>
          <li class="user-name m-1 text-center">
            <span class="nav-link text-white">
              <i class="fas fa-user mr-1"></i>
              <%= showUser %>
            </span>
          </li>
          <li class="m-1">
            <a class="nav-link btn btn-primary text-white" href="/users/logout"> <!-- เปลี่ยนสีปุ่มเป็นสีฟ้า -->
              <i class="fas fa-sign-out-alt mr-1"></i> Logout
            </a>
          </li>
          <% } else { %>
            <li class="m-1">
              <a class="nav-link btn btn-primary text-white" href="/users/register"> <!-- เปลี่ยนสีปุ่มเป็นสีฟ้า -->
                <i class="fas fa-user-plus mr-1"></i> Sign Up
              </a>
            </li>
            <li class="m-1">
              <a class="nav-link btn btn-primary text-white" href="/users/login"> <!-- เปลี่ยนสีปุ่มเป็นสีฟ้า -->
                <i class="fas fa-sign-in-alt mr-1"></i> Login
              </a>
            </li>
            <% } %>
      </ul>

    </div>
  </div>
</nav>
