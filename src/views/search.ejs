
<!-- Hero Section -->
<section class="hero bg-light py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="card">
            <div class="card-body">
              <h2 class="card-title text-center mb-4">Find the Perfect Hotel for Your Stay</h2>
              <form id="search-form" method="get" action="/search/">
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="location">Location</label>
                    <input type="text" name="search" class="form-control" id="location" placeholder="Enter Location">
                  </div>
                  <div class="form-group col-md-6">
                    <label for="num-guests">จำนวนผู้เข้าพัก</label>
                    <input type="number" class="form-control" id="num-guests" name="numGuest" min="1" value="1">
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="check-in">Check-in</label>
                    <input type="date" class="form-control" id="check-in" name="checkIn" placeholder="Check-in">
                  </div>
                  <div class="form-group col-md-6">
                    <label for="check-out">Check-out</label>
                    <input type="date" class="form-control" id="check-out" name="checkOut" placeholder="Check-out">
                  </div>
                </div>
                <div class="form-group">
                  <button type="submit" class="btn btn-primary btn-block mt-4">Search</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  