        };
        let currentFocusedCardId = null;

        function changeImage(newImageUrl, cardId) {
            document.getElementById('img-service').src = newImageUrl;
            document.getElementById(cardId).style.backgroundColor = '#3e3935';
            document.getElementById(cardId).style.color = '#fff';
            
            if (currentFocusedCardId && currentFocusedCardId !== cardId) {
                document.getElementById(currentFocusedCardId).style.backgroundColor = '';
                document.getElementById(currentFocusedCardId).style.color = '';
                document.getElementById(currentFocusedCardId).classList.remove('focused');
            }
            document.getElementById(cardId).classList.add('focused');
            currentFocusedCardId = cardId;
        }
    </script>